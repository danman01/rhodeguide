<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <hr />
  <%=f.hidden_field :user_id, :value=>current_user.id  %>
  <% if @location %>
    <%= hidden_field_tag :location, @location %>
  <% end %>
  <div class="field">
    <%= f.label :name, "Group name" %><br>
    <%= f.text_field :name, placeholder: 'Boston Rentals' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "Something for 2-4 people. Not too far from MIT" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
